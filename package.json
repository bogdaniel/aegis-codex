{
  "name": "@aegis/cli",
  "version": "0.1.0",
  "private": false,
  "description": "Aegis CLI for installing, compiling, and generating agent/workflow bundles",
  "files": [
    "src/**/*",
    "source/**/*",
    "rules/**/*",
    "docs/.aegis-rules.example-*.json",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "aegis": "src/cli.js"
  },
  "scripts": {
    "aegis:menu": "node src/cli.js menu",
    "aegis:compile": "node src/cli.js compile",
    "aegis:bundle": "node src/build-cli.js bundle",
    "aegis:validate": "node src/build-cli.js validate",
    "aegis:ci": "node src/scripts/ci-validate.js",
    "aegis:diagrams": "node src/cli.js diagrams",
    "aegis:install": "node src/cli.js install",
    "aegis:rules": "node src/cli.js rules",
    "aegis:check": "node src/cli.js check"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "glob": "^10.4.5",
    "js-yaml": "^4.1.0",
    "yaml": "^2.7.0",
    "zod": "^4.1.12"
  }
}
