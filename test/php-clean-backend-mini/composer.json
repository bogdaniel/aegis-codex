{
    "name": "aegis-codex/php-backend",
    "description": "Minimal PHP backend demonstrating Aegis Codex architecture",
    "type": "project",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "IdentityContext\\": "src/IdentityContext/",
            "OrdersContext\\": "src/OrdersContext/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse --level=max src/ tests/",
        "phpcs": "phpcs --standard=PSR12 src/ tests/",
        "phpcbf": "phpcbf --standard=PSR12 src/ tests/"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}

