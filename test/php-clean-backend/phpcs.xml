<?xml version="1.0"?>
<ruleset name="AegisCodex">
    <description>PSR-12 coding standard for PHP Clean Backend</description>
    <file>src</file>
    <file>tests</file>
    <exclude-pattern>vendor</exclude-pattern>
    <exclude-pattern>*.cache</exclude-pattern>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="8"/>
    <arg name="colors"/>
    <arg name="report" value="full"/>
    <rule ref="PSR12"/>
</ruleset>

