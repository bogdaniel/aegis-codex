{
    "name": "aegis-codex/php-clean-backend",
    "description": "Test backend demonstrating Clean Architecture, Hexagonal Architecture, and DDD patterns",
    "type": "project",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "AegisCodex\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AegisCodex\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse --level=max src tests",
        "phpcs": "phpcs --standard=PSR12 src tests",
        "phpcbf": "phpcbf --standard=PSR12 src tests",
        "check": [
            "@phpcs",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}

