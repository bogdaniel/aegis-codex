{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "ignorePatterns": ["dist/**", "node_modules/**"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["../../*", "../../../*", "../../../../*"],
            "message": "Deep relative imports (../../ or deeper) are forbidden. Use path aliases instead (e.g., @identity/domain/*, @orders/app/*)."
          }
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/Domain/**/*.ts"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": [
              {
                "group": ["../../*", "../../../*", "../../../../*"],
                "message": "Deep relative imports (../../ or deeper) are forbidden. Use path aliases instead."
              },
              {
                "group": ["@identity/infra/*", "@identity/interface/*", "@orders/infra/*", "@orders/interface/*"],
                "message": "Domain layer cannot import from Infrastructure or Interface layers. Use ports/adapters pattern."
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["**/OrdersContext/**/*.ts"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": [
              {
                "group": ["../../*", "../../../*", "../../../../*"],
                "message": "Deep relative imports (../../ or deeper) are forbidden. Use path aliases instead."
              },
              {
                "group": ["@identity/infra/*", "@identity/interface/*"],
                "message": "Cross-context imports must use public API modules (@identity/app/index.js), not direct Infrastructure/Interface imports."
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["**/IdentityContext/**/*.ts"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": [
              {
                "group": ["../../*", "../../../*", "../../../../*"],
                "message": "Deep relative imports (../../ or deeper) are forbidden. Use path aliases instead."
              },
              {
                "group": ["@orders/infra/*", "@orders/interface/*"],
                "message": "Cross-context imports must use public API modules (@orders/app/index.js), not direct Infrastructure/Interface imports."
              }
            ]
          }
        ]
      }
    }
  ]
}

